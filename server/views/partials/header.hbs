<header>
  <div class="logo-wrapper">
    <a class="logo nav" href="/" title="Homepage">
      <img src="/images/logo.png" alt="kutt" width="18" height="24" />
      {{site_name}}
    </a>
    <ul class="logo-links">
      <li>
        <a class="nav" href="https://github.com/thedevs-network/kutt" target="_blank" rel="noopener noreferrer" title="GitHub">
          GitHub
        </a>
      </li>
      {{#if report_email}}
        <li>
          <a class="nav" href="/report" title="Report abuse">
            Report
          </a>
        </li>
      {{/if}}
    </ul>
  </div>
  <nav>    <ul>
      {{#unless user}}
        <li>
          <a class="button primary" href="/login" title="{{i18n 'common.login'}}">
            {{i18n 'common.login'}} / {{i18n 'auth.signup.title'}}
          </a>
        </li>
      {{/unless}}
      {{#if user}}
        <li>
          <a class="button primary" href="/settings" title="{{i18n 'common.settings'}}">
            <span>{{> icons/cog}}</span>
            {{i18n 'common.settings'}}
          </a>
        </li>
        {{#if isAdmin}}
          <li>
            <a class="button secondary" href="/admin" title="{{i18n 'common.admin'}}">
              <span>{{> icons/shield}}</span>
              {{i18n 'common.admin'}}
            </a>
          </li>
        {{/if}}
        <li>
          <a class="nav" href="/logout" title="{{i18n 'common.logout'}}">
            {{i18n 'common.logout'}}
          </a>
        </li>
      {{/if}}
      <li>
        {{> language_switcher}}
      </li>
    </ul>
  </nav>
</header>