<thead>
  {{> admin/table_tab title='links'}}
  <tr class="controls links-controls with-filters">
    <th class="filters">
      <div>
        <div class="search-input-wrapper">          <input 
            id="search" 
            name="search" 
            type="text" 
            placeholder="{{i18n 'admin.searchLink'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.search}}"
          />          <button 
            type="button" 
            aria-label="{{i18n 'admin.action.clearSearch'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>        <div class="search-input-wrapper">          <input 
            id="search_domain" 
            name="domain" 
            type="text" 
            placeholder="{{i18n 'admin.searchDomain'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.domain}}"
          />
          <button 
            type="button" 
            aria-label="{{i18n 'admin.action.clearSearch'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>        <div class="search-input-wrapper">          <input 
            id="search_user" 
            name="user" 
            type="text" 
            placeholder="{{i18n 'admin.searchUser'}}..."
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.user}}"
          />
          <button 
            type="button" 
            aria-label="{{i18n 'admin.action.clearSearch'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>
      </div>
      <div>
        <select 
          id="links-select-banned"
          name="banned"
          class="table-input ban"
          hx-on:change="resetTableNav()"
        >          <option value="" selected>{{i18n 'admin.banned'}}...</option>
          <option value="true">{{i18n 'admin.isBanned'}}</option>
          <option value="false">{{i18n 'admin.notBanned'}}</option>
        </select>
        <select 
          id="links-select-anonymous"
          name="anonymous"
          class="table-input anonymous"
          hx-on:change="resetTableNav()"
        >          <option value="">{{i18n 'admin.anonymous'}}...</option>
          <option value="true" {{#ifEquals query.anonymous 'true'}}selected{{/ifEquals}}>{{i18n 'admin.isAnonymous'}}</option>
          <option value="false" {{#ifEquals query.anonymous 'false'}}selected{{/ifEquals}}>{{i18n 'admin.isUser'}}</option>
        </select>
        <select 
          id="links-select-anonymous"
          name="has_domain"
          class="table-input has_domain"
          hx-on:change="resetTableNav()"
        >          <option value="">{{i18n 'admin.domains'}}</option>
          <option value="true" {{#ifEquals query.has_domain 'true'}}selected{{/ifEquals}}>{{i18n 'admin.withDomain'}}</option>
          <option value="false" {{#ifEquals query.has_domain 'false'}}selected{{/ifEquals}}>{{i18n 'admin.noDomain'}}</option>
        </select>
        <input id="total" name="total" type="hidden" value="{{total}}" />
        <input id="limit" name="limit" type="hidden" value="10" />
        <input id="skip" name="skip" type="hidden" value="0" />
      </div>
    </th>
    {{> admin/table_nav}}
  </tr>
  <tr>
    <th class="original-url">{{i18n 'table.originalUrl'}}</th>
    <th class="created-at">{{i18n 'table.createdAt'}}</th>
    <th class="short-link">{{i18n 'table.shortUrl'}}</th>
    <th class="views">{{i18n 'table.clicks'}}</th>
    <th class="actions">{{i18n 'table.actions'}}</th>
  </tr>
</thead>