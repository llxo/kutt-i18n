<div class="content admin-create">
  <h2>{{i18n 'dialog.admin.domain.add.title'}}</h2>
  <form
    id="add-domain-form"
    hx-post="/api/domains/admin" 
    hx-target="closest .content" 
    hx-swap="outerHTML" 
    hx-indicator="closest .content"
  >
    <label class="{{#if errors.address}}error{{/if}}">
      {{i18n 'dialog.admin.domain.add.address'}}:
      <input
        name="address"
        id="add-domain-address"
        type="text"
        placeholder="{{i18n 'dialog.admin.domain.add.address'}}..."
        hx-preserve="true"
      />
      {{#if errors.address}}<p class="error">{{errors.address}}</p>{{/if}}
    </label>
    <label class="{{#if errors.homepage}}error{{/if}}">
      {{i18n 'dialog.admin.domain.add.homepage'}}:
      <input
        name="homepage"
        id="add-domain-homepage"
        type="text"
        placeholder="{{i18n 'dialog.admin.domain.add.homepage'}}..."
        hx-preserve="true"
      />
      {{#if errors.homepage}}<p class="error">{{errors.homepage}}</p>{{/if}}    </label>
    <label class="checkbox">
      <input 
        id="add-domain-banned" 
        name="banned"
        type="checkbox"
        onchange="canSendVerificationEmail();" 
        hx-preserve="true"
      />
      {{i18n 'dialog.admin.domain.add.banned'}}
    </label>
    <div class="buttons">
      <button type="button" hx-on:click="closeDialog()">{{i18n 'dialog.cancel'}}</button>
      <button type="submit" class="primary">
        <span>{{> icons/plus}}</span>
        {{i18n 'dialog.admin.domain.add.button'}}
      </button>
      {{> icons/spinner}}
    </div>
  </form>
  <div id="dialog-error">
    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}
  </div>
</div>