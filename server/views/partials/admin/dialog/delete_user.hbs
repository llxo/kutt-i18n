<div class="content">
  <h2>{{i18n 'dialog.admin.user.delete.title'}}</h2>
  <p>
    {{i18n 'dialog.admin.user.delete.confirmMessage' email=email}}<br/>
    <b>{{i18n 'dialog.admin.user.delete.warning'}}</b>
  </p>
  <div class="buttons">
    <button type="button" hx-on:click="closeDialog()">{{i18n 'dialog.cancel'}}</button>
    <button 
      type="button"
      class="danger confirm" 
      hx-delete="/api/users/admin/{id}" 
      hx-ext="path-params" 
      hx-vals='{"id":"{{id}}"}' 
      hx-target="closest .content" 
      hx-swap="none" 
      hx-indicator="closest .content"
      hx-select-oob="#dialog-error"
    >
      <span>{{> icons/trash}}</span>
      {{i18n 'dialog.admin.user.delete.button'}}
    </button>
    {{> icons/spinner}}
  </div>
  <div id="dialog-error">
    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}
  </div>
</div>